<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/cardview_light_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pantryItemName"
                android:layout_width="167dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Item Name"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expiresText"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:text="Expires:" />

                <TextView
                    android:id="@+id/pantryDateText"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:text="Item Date"
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/button_setDate"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="41dp"
            android:layout_height="32dp"
            android:background="@drawable/daterange" />

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/button_deletePantryItem"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/clear_icon"
            android:gravity="center" />


    </LinearLayout>


</LinearLayout>


